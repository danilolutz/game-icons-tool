{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug TypeScript",
      "runtimeArgs": [
        "--no-warnings=ExperimentalWarning",
        "--loader",
        "ts-node/esm"
      ],
      "args": [
        "${workspaceFolder}/src/index.ts",
        "web",
        "downloads",
        "downloads/web"
      ],
      "cwd": "${workspaceFolder}",
      "sourceMaps": true,
      "internalConsoleOptions": "openOnSessionStart",
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
